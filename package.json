{
  "name": "recept",
  "version": "0.1.0",
  "description": "A static web app for hosting food recipes",
  "type": "module",
  "scripts": {
    "generate:image-index": "node scripts/generate-image-index.cjs",
    "dev": "npm run generate:image-index && vite",
    "build": "npm run generate:image-index && tsc && vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "gray-matter": "^4.0.3",
    "lucide-react": "^0.553.0",
    "marked": "^11.1.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.9.5"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20.10.6",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "@vitejs/plugin-react": "^5.1.0",
    "@vitest/ui": "^4.0.8",
    "buffer": "^6.0.3",
    "eslint": "^8.56.0",
    "happy-dom": "^20.0.10",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vite-plugin-node-polyfills": "^0.24.0",
    "vitest": "^4.0.8"
  }
}
