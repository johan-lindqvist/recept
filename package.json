    "@typescript-eslint/parser": "^6.17.0",
    "@vitest/ui": "^4.0.8",
    "buffer": "^6.0.3",
    "eslint": "^8.56.0",
    "happy-dom": "^20.0.10",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
